<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/taskItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:contentPadding="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/ic_calender_end" />



                <TextView
                    android:id="@+id/notificationTitle"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:fontFamily="@font/inter_medium"
                    android:maxLines="1"
                    android:layout_gravity="left"
                    android:scrollHorizontally="true"
                    android:text="Ellipsis is triple dots (...) at the end of the line. It is required when you want to keep your sentence in a single line. If your"
                    android:textSize="@dimen/_13ssp" />


                <TextView

                    android:id="@+id/notificationDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_medium"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:text="Ellipsis is triple dots (...) at the end of the line. It is required when you want to keep your sentence in a single line. If your test reached the end of the line then automatically create ... at the end"
                    android:textSize="@dimen/_11ssp" />


        <TextView
            android:id="@+id/notificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom |right"
            android:fontFamily="@font/inter_medium"
            android:text="16/23/33"
            android:textSize="@dimen/_8ssp"
            android:visibility="visible" />





    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>